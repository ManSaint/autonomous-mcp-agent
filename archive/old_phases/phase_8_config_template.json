{
  "phase_8_mcp_config": {
    "description": "Phase 8 Real MCP Protocol Configuration Template",
    "version": "8.0.0",
    "protocol_version": "2024-11-05",
    
    "client_settings": {
      "timeout_seconds": 30,
      "retry_attempts": 3,
      "enable_caching": true,
      "cache_duration_minutes": 60,
      "log_level": "INFO"
    },
    
    "server_configurations": {
      "desktop_commander": {
        "command": ["node", "path/to/desktop-commander/dist/index.js"],
        "description": "Desktop Commander MCP Server",
        "enabled": true,
        "environment": {},
        "health_check_interval": 300
      },
      "github": {
        "command": ["node", "path/to/github-mcp-server"],
        "description": "GitHub MCP Server", 
        "enabled": true,
        "environment": {
          "GITHUB_TOKEN": "your-token-here"
        },
        "health_check_interval": 300
      },
      "postman": {
        "command": ["node", "path/to/postman-mcp-server"],
        "description": "Postman MCP Server",
        "enabled": true,
        "environment": {
          "POSTMAN_API_KEY": "your-key-here"
        },
        "health_check_interval": 300
      }
    },
    
    "validation_settings": {
      "run_health_checks": true,
      "validate_tool_schemas": true,
      "test_connections_on_startup": true,
      "generate_reports": true
    },
    
    "performance_settings": {
      "max_concurrent_connections": 10,
      "connection_pool_size": 5,
      "message_queue_size": 100,
      "enable_performance_monitoring": true
    }
  }
}
